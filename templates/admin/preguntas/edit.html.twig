{% extends 'base.html.twig' %}

{% block title %}Editar Pregunta{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Editar Pregunta</h1>

    {{ form_start(form, {'attr': {'class': 'form'}}) }}
    
    <div class="form-group mb-3">
        {{ form_label(form.titulo, 'TÃ­tulo de la Pregunta') }}
        {{ form_widget(form.titulo, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.titulo) }}
    </div>

    <div class="row">
        <div class="col-md-6 form-group mb-3">
            {{ form_label(form.fecha_inicio, 'Fecha de Inicio') }}
            {{ form_widget(form.fecha_inicio, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fecha_inicio) }}
        </div>

        <div class="col-md-6 form-group mb-3">
            {{ form_label(form.fecha_fin, 'Fecha de Fin') }}
            {{ form_widget(form.fecha_fin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fecha_fin) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group mb-3">
            {{ form_label(form.r1, 'Respuesta 1') }}
            {{ form_widget(form.r1, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.r1) }}
        </div>

        <div class="col-md-6 form-group mb-3">
            {{ form_label(form.r2, 'Respuesta 2') }}
            {{ form_widget(form.r2, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.r2) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group mb-3">
            {{ form_label(form.r3, 'Respuesta 3') }}
            {{ form_widget(form.r3, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.r3) }}
        </div>

        <div class="col-md-6 form-group mb-3">
            {{ form_label(form.r4, 'Respuesta 4') }}
            {{ form_widget(form.r4, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.r4) }}
        </div>
    </div>

    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="{{ path('admin_preguntas') }}" class="btn btn-secondary">Cancelar</a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}