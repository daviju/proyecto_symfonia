{% extends 'base.html.twig' %}

{% block title %}Editar Pregunta{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4 text-primary">Editar Pregunta</h1>
            <div>
                <a href="{{ path('admin_preguntas_show', { id: pregunta.id }) }}" class="btn btn-secondary btn-lg shadow me-2">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title">Editar: {{ pregunta.titulo }}</h3>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.titulo) }}
                        {{ form_widget(form.titulo, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.fechaInicio) }}
                        {{ form_widget(form.fechaInicio, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.fechaFin) }}
                        {{ form_widget(form.fechaFin, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.r1) }}
                        {{ form_widget(form.r1, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.r2) }}
                        {{ form_widget(form.r2, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.r3) }}
                        {{ form_widget(form.r3, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.r4) }}
                        {{ form_widget(form.r4, { 'attr': { 'class': 'form-control' } }) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg shadow">Guardar cambios</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
