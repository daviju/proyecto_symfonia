{% extends 'base.html.twig' %}

{% block title %}Crear Nueva Pregunta{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Crear Nueva Pregunta</h1>

    {{ form_start(form, {'attr': {'id': 'pregunta-form'}}) }}
        {{ form_row(form.titulo) }}

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.fecha_inicio) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.fecha_fin) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.r1) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.r2) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_row(form.r3) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.r4) }}
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Crear Pregunta</button>
            <a href="{{ path('admin_preguntas') }}" class="btn btn-danger">Volver</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}