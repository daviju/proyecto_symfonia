{% extends 'base.html.twig' %}

{% block title %}Responder Pregunta{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>{{ pregunta.titulo }}</h2>
    
    <form method="POST" action="{{ path('guardar_respuesta', {'id': pregunta.id}) }}">
        <div class="card mb-3">
            <div class="card-body">
                <div class="form-check">
                    <input 
                        class="form-check-input" 
                        type="radio" 
                        name="respuesta" 
                        id="opcion1" 
                        value="1" 
                        required
                    >
                    <label class="form-check-label" for="opcion1">
                        {{ pregunta.r1 }}
                    </label>
                </div>

                <div class="form-check">
                    <input 
                        class="form-check-input" 
                        type="radio" 
                        name="respuesta" 
                        id="opcion2" 
                        value="2" 
                        required
                    >
                    <label class="form-check-label" for="opcion2">
                        {{ pregunta.r2 }}
                    </label>
                </div>

                {% if pregunta.r3 %}
                <div class="form-check">
                    <input 
                        class="form-check-input" 
                        type="radio" 
                        name="respuesta" 
                        id="opcion3" 
                        value="3" 
                        required
                    >
                    <label class="form-check-label" for="opcion3">
                        {{ pregunta.r3 }}
                    </label>
                </div>
                {% endif %}

                {% if pregunta.r4 %}
                <div class="form-check">
                    <input 
                        class="form-check-input" 
                        type="radio" 
                        name="respuesta" 
                        id="opcion4" 
                        value="4" 
                        required
                    >
                    <label class="form-check-label" for="opcion4">
                        {{ pregunta.r4 }}
                    </label>
                </div>
                {% endif %}
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Enviar Respuesta</button>
        <a href="{{ path('usuario_preguntas') }}" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
{% endblock %}