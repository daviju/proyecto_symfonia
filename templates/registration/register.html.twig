{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: linear-gradient(to right, #bdc3c7, #2c3e50);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    .register-container {
        max-width: 400px;
        padding: 30px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        background-color: #ffffff;
        animation: fadeInUp 1s ease-in-out;
    }
    .register-title {
        text-align: center;
        margin-bottom: 20px;
        color: #2c3e50;
    }
    .register-button {
        width: 100%;
        background-color: #3498db;
        border: none;
        animation: pulse 2s infinite;
    }
    .register-button:hover {
        background-color: #2980b9;
    }
    .alert {
        text-align: center;
    }
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(52, 152, 219, 0.4);
        }
        70% {
            box-shadow: 0 0 0 10px rgba(52, 152, 219, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(52, 152, 219, 0);
        }
    }
</style>

<div class="register-container">
    <h1 class="h3 mb-3 font-weight-normal register-title">Register</h1>

    {{ form_start(registrationForm) }}
        {% if form_errors(registrationForm) %}
            <div class="alert alert-danger">{{ form_errors(registrationForm) }}</div>
        {% endif %}
        
        <div class="form-floating mb-3">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(registrationForm.email) }}
        </div>

        <div class="form-floating mb-3">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(registrationForm.plainPassword, 'Password') }}
        </div>

        <div class="form-check mb-3">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, null, {'attr': {'class': 'form-check-label'}}) }}
        </div>

        <button type="submit" class="btn btn-lg btn-primary register-button">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
