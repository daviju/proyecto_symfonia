{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<style>
    /* Estilos específicos solo para el registro */
    .register-card {
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12) !important;
        border: none !important;
        border-radius: 12px !important;
        width: 100%;
        max-width: 400px;
        margin: auto;
    }

    .register-card .card-body {
        padding: 2.5rem !important;
    }

    .register-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: #333333;
        text-align: center;
    }

    .register-form .form-floating {
        margin-bottom: 1.25rem;
    }

    .register-form .form-control {
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 1rem 0.75rem;
    }

    .register-form .form-control:focus {
        border-color: #8E44AD;
        box-shadow: 0 0 0 2px rgba(142, 68, 173, 0.2);
    }

    .register-btn {
        width: 100%;
        padding: 0.75rem;
        border: none;
        background: linear-gradient(to right, #8E44AD, #3498DB);
        color: white;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .register-btn:hover {
        background: linear-gradient(to right, #6D358C, #2C80B9);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .login-link {
        text-align: center;
        margin-top: 1rem;
        font-size: 0.9rem;
        color: #666666;
    }

    .login-link a {
        color: #3498DB;
        text-decoration: none;
    }

    .login-link a:hover {
        color: #2C80B9;
        text-decoration: underline;
    }

    .form-check-label {
        font-size: 0.9rem;
        color: #555555;
    }

    .form-check-input:checked {
        background-color: #8E44AD;
        border-color: #8E44AD;
    }
</style>
{% endblock %}

{% block body %}
    <div class="register-card card">
        <div class="card-body">
            <h1 class="register-title">Create Your Account</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
                {% if form_errors(registrationForm) %}
                    <div class="alert alert-danger">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}
                
                <div class="form-floating">
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Email'
                        }
                    }) }}
                    {{ form_label(registrationForm.email) }}
                </div>

                <div class="form-floating">
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Password'
                        }
                    }) }}
                    {{ form_label(registrationForm.plainPassword, 'Password') }}
                </div>

                <div class="form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {'class': 'form-check-input'}
                    }) }}
                    {{ form_label(registrationForm.agreeTerms, null, {
                        'attr': {'class': 'form-check-label'}
                    }) }}
                </div>

                <button type="submit" class="register-btn">Sign Up</button>

                <div class="login-link">
                    <p>¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a></p>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}