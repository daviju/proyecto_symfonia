{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background: linear-gradient(135deg, #74b9ff, #a29bfe, #dfe6e9);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: 'Poppins', sans-serif;
    }

    .register-container {
        max-width: 400px;
        padding: 40px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        animation: slideIn 1s ease-in-out;
    }

    .register-title {
        font-size: 1.8rem;
        font-weight: bold;
        text-align: center;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .form-floating label {
        color: #636e72;
    }

    .form-floating input:focus {
        border-color: #6c5ce7;
        box-shadow: 0 0 5px rgba(108, 92, 231, 0.5);
    }

    .form-check-label {
        font-size: 0.9rem;
        color: #2d3436;
    }

    .register-button {
        width: 100%;
        background: linear-gradient(45deg, #6c5ce7, #74b9ff);
        color: white;
        border: none;
        font-size: 1rem;
        padding: 10px;
        transition: all 0.3s ease;
        border-radius: 25px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .register-button:hover {
        background: linear-gradient(45deg, #74b9ff, #6c5ce7);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        transform: translateY(-2px);
    }

    .alert {
        text-align: center;
        color: #d63031;
        background: rgba(214, 48, 49, 0.1);
        border: 1px solid #d63031;
        border-radius: 10px;
        padding: 10px;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="register-container">
    <h1 class="register-title">Create Your Account</h1>

    {{ form_start(registrationForm) }}
        {% if form_errors(registrationForm) %}
            <div class="alert">{{ form_errors(registrationForm) }}</div>
        {% endif %}
        
        <div class="form-floating mb-3">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(registrationForm.email) }}
        </div>

        <div class="form-floating mb-3">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(registrationForm.plainPassword, 'Password') }}
        </div>

        <div class="form-check mb-3">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, null, {'attr': {'class': 'form-check-label'}}) }}
        </div>

        <div class="text-center mt-3">
            <p>¿Ya tienes cuenta? <a href="{{ path('app_login') }}">Inicia sesión</a></p>
        </div>

        <button type="submit" class="btn btn-lg register-button">Sign Up</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
